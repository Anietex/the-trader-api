{
  "name": "bitris-api",
  "version": "1.0.0",
  "description": "'Bitris core back end API'",
  "main": "dist/index.js",
  "scripts": {
    "build": "rimraf dist && tsc",
    "preserve": "npm run build",
    "serve": "cross-env NODE_ENV=development concurrently \"tsc --watch\" \"nodemon --delay 500ms -q dist/index.js\"",
    "prestart": "npm run build",
    "start": "cross-env NODE_ENV=production node dist/index.js",
    "test": "jest --watch --runInBand --verbose"
  },
  "repository": {
    "type": "git",
    "url": "git+ssh://git@github.com/bitrisglobal/bitris-api.git"
  },
  "nodemonConfig": {
    "ignore": ["logs/*","src/*"]
  },
  "keywords": [
    "Bitcoin",
    "Crypto",
    "Bitris",
    "Payment"
  ],
  "author": "Aniefon Umanah",
  "license": "ISC",
  "_moduleAliases": {
    "@": "dist"
  },
  "bugs": {
    "url": "https://github.com/bitrisglobal/bitris-api/issues"
  },
  "homepage": "https://github.com/bitrisglobal/bitris-api#readme",
  "dependencies": {
    "bcryptjs": "^2.4.3",
    "body-parser": "^1.19.0",
    "cors": "^2.8.5",
    "cross-env": "^7.0.3",
    "crypto-random-string": "^4.0.0",
    "dotenv": "^8.2.0",
    "express": "^4.17.1",
    "express-validator": "^6.10.0",
    "handlebars": "^4.7.7",
    "helmet": "^4.4.1",
    "jsonwebtoken": "^8.5.1",
    "module-alias": "^2.2.2",
    "moment": "^2.29.1",
    "mongodb-memory-server": "^6.9.6",
    "mongoose": "^5.12.2",
    "nodemailer": "^6.6.1",
    "randomstring": "^1.1.5",
    "rimraf": "^3.0.2",
    "typescript": "^4.2.3",
    "winston": "^3.3.3"
  },
  "devDependencies": {
    "@types/bcryptjs": "^2.4.2",
    "@types/body-parser": "^1.19.0",
    "@types/cors": "^2.8.10",
    "@types/dotenv": "^8.2.0",
    "@types/express": "^4.17.11",
    "@types/jest": "^26.0.22",
    "@types/jsonwebtoken": "^8.5.1",
    "@types/node": "^14.14.37",
    "@types/nodemailer": "^6.4.2",
    "@types/randomstring": "^1.1.6",
    "@typescript-eslint/eslint-plugin": "^4.19.0",
    "@typescript-eslint/parser": "^4.19.0",
    "concurrently": "^6.0.0",
    "eslint": "^7.23.0",
    "eslint-config-airbnb-base": "^14.2.1",
    "eslint-plugin-import": "^2.22.1",
    "jest": "^26.6.3",
    "nodemon": "^2.0.7",
    "prettier": "2.2.1",
    "ts-jest": "^26.5.5"
  }
}
